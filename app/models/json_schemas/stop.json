{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Transitland Datastore Stop",
  "type": "object",
  "required": ["onestopId"],
  "additionalProperties": false,
  "properties": {
    "onestopId": {
      "type": "string",
      "format": "stop-onestop-id"
    },
    "geometry": { "type": "object" },
    "timezone": { "type": "string" },
    "tags": { "type": "object" },
    "name": { "type": "string" },
    "osmWayId": {"type": ["integer", "null"]},
    "parentStopOnestopId": {
      "type": "string",
      "format": "stop-onestop-id"
    },
    "identifiedBy": {
      "type": ["array", "null"],
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "notIdentifiedBy": {
      "type": ["array", "null"],
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "servedBy": {
      "type": ["array", "null"],
      "uniqueItems": true,
      "items": {
        "type": "string",
        "format": "operator-onestop-id"
      }
    },
    "notServedBy": {
      "type": ["array", "null"],
      "uniqueItems": true,
      "items": {
        "type": "string",
        "format": "operator-onestop-id"
      }
    },
    "includesStopTransfers": {
      "type": ["array", "null"],
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["toStopOnestopId", "transferType"],
        "toStopOnestopId": {
          "type": "string",
          "format": "stop-onestop-id"
        },
        "transferType": {
          "type": "string"
        },
        "minTransferTime": {
          "type": ["number", "null"]
        }
      }
    },
    "doesNotIncludeStopTransfers": {
      "type": ["array", "null"],
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["destinationOnestopId"],
        "destinationOnestopId": {
          "type": "string",
          "format": "stop-onestop-id"
        }
      }
    }
  }
}
